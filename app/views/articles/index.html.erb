<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">

    <% @articles.each do |article| %>
      <%= link_to article_path(article) do %>
        <h2><%= article.title %></h2>
      <% end %>
      <div class="text-center font-content">
        <ul>
          <li><%= raw Kramdown::Document.new(article.content).to_html
       %></li>
        </ul>
      <% end %>
      </div>

    </div>
  </div>
</div>
